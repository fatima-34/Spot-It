<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="16">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="8" >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>
        <ImageButton
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="42dp"
            android:adjustViewBounds="true"
            android:padding="1dp"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow_icon"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Item"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center|left"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5"/>
        <Button
            android:id="@+id/report"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:backgroundTint="@color/white"
            android:text="Report"
            android:textSize="18dp"
            android:textColor="#FF5722"
            android:textAllCaps="false"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/grey"
        android:layout_weight="8"/>

    <TextView
        android:id="@+id/rate"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="$12 /hr"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="#FF5722"
        android:paddingLeft="8dp"
        android:gravity="left|bottom"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:text="Name of the Item comes here"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:paddingLeft="8dp"
        android:gravity="left|center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:weightSum="8"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:src="@drawable/location"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:text="Islamabad"
            android:textSize="18sp"
            android:gravity="left|center"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="7th Mar, 2023"
            android:textSize="18sp"
            android:gravity="left|center"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:text="Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to "
        android:textSize="20sp"
        android:textColor="@color/black"
        android:paddingLeft="9dp"
        android:paddingRight="9dp"
        android:gravity="left|center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="horizontal"
        android:weightSum="5"
        android:padding="8dp">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:src="@drawable/makenna"
            android:layout_weight="0.5"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3.4"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Ryan Calzoni"
                android:textStyle="bold"
                android:gravity="center|left"
                android:textColor="@color/black"
                android:textSize="17dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="24 items rented"
                android:gravity="center|left"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/chat"
            android:layout_width="1dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:contentDescription="Button Image"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_chat_bubble_outline_24"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3" />
    <Button
        android:layout_width="450dp"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:text="Rent it"
        android:textAllCaps="false"
        android:layout_marginLeft="20dp"
        android:backgroundTint="#FF5722"/>

</LinearLayout>
