<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="100dp"
        android:background="#28000000"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="13">

            <ImageButton
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:padding="1dp"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_icon1"
                android:layout_weight="2"/>

            <ImageButton
                android:id="@+id/brightnessButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="90dp"
                android:layout_marginEnd="80dp"
                android:adjustViewBounds="true"
                android:padding="1dp"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_icon2"
                android:layout_weight="2"/>

            <!-- Timer Button -->
            <ImageButton
                android:id="@+id/timerButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:padding="1dp"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_icon3"
                android:layout_weight="2"/>

        </LinearLayout>

        <!-- Add your camera preview here -->
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <!-- Gallery, Photo Click, Switch Camera Icons -->

        <!-- Photo and Video buttons -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="400dp"
            android:layout_height="120dp"
            android:orientation="horizontal"
            android:weightSum="9">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.3" />
            <!-- Gallery Button -->
            <ImageButton
                android:id="@+id/galleryButton"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_icon4"
                android:layout_weight="0.62"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.2" />
            <!-- Photo Click Button -->
            <ImageButton
                android:id="@+id/clickButton"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:padding="1dp"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_icon5"
                android:layout_weight="0.7"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <!-- Switch Camera Button -->
            <ImageButton
                android:id="@+id/switchButton"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:padding="1dp"
                android:scaleType="fitCenter"
                android:src="@drawable/camera_icon6"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/buttonContainer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:orientation="horizontal"
            android:weightSum="9">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <Button
                android:id="@+id/switchPhotoButton"
                android:layout_width="107dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:backgroundTint="@color/white"
                android:text="Photo"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:textAllCaps="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/switchVideoButton"
                android:layout_width="107dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:backgroundTint="#FF5722"
                android:text="Video"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textAllCaps="false"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>